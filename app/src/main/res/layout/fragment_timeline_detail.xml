<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/timeline_details"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".TimelineDetailFragment" >

    <TextView
            android:id="@+id/timeline_detail_handle"
            style="@style/yambaText.label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

    <TextView
            android:id="@+id/timeline_detail_timestamp"
            style="@style/yambaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />

    <TextView
            android:id="@+id/timeline_detail_tweet"
            style="@style/yambaText.medium"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/fog" />

</LinearLayout>
